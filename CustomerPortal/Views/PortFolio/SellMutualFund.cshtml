@model CustomerPortal.Models.MutualFundDetails

@{
    ViewData["Title"] = "SellMutualFund";
}

<link rel="stylesheet" href="~/css/login.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>

<body>
    <div class="sidenav">
        <div class="login-main-text">
            <h2 style="font-weight:600">Sell Mutual Funds</h2>
            <p style="font-weight:300">Sell your Mutual Funds hasle free from here.</p>
        </div>
        </div>
        <div class="main ">
            <div>
        <a asp-action="Logout" class="btn btn-outline-dark mt-4 mr-4 float-md-right">Logout</a>
        </div>
            <div class="col-md-6 col-sm-12">
                
                <div class="login-form">
                    <form asp-action="SellMutualFund">
                        <div class="form-group">
                            <input asp-for="@Model.MutualFundName" class="form-control form-control-lg" placeholder="Mutual Fund Name" required readonly>
                        </div>
                        <div class="form-group">   
                            <input asp-for="@Model.MutualFundUnits" class="form-control form-control-lg" placeholder="Mutual Fund Count" required/>
                        </div>
                        <input type="submit" value="SELL" class="btn btn-black" style="color:white">
                    </form>
                    </div>
                    <div class="text-center">
                    <a asp-action="Index">Back to Home</a>
                </div>
                    </div>
                    </div>
                    </div>
                    </body>
              


            <script src="~/Scripts/jquery-3.4.1.min.js"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>