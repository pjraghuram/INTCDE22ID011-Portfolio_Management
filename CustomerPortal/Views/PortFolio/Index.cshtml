        @*table for stocks*@

    <div class="mr-4 ml-4">
        <div class="p-3 mb-3 rounded text-white" style="margin-top:2%; background-color:black">
        <h4 class="text-center"> Stocks</h4>
        <table class="table table-striped" >

            <thead class="table-light">
                <tr class="justify-content-center text-center">
                    <th scope="col" style=" width: 180px;">ID</th>
                    <th scope="col" style=" width: 180px;">Stock Name</th>
                    <th scope="col" style=" width: 180px;">Stock Price</th>
                    <th scope="col" style=" width: 180px;">Stock Count</th>
                    <th scope="col" style=" width: 180px;">Sell</th>
                </tr>
            </thead>
            <tbody class="table-dark text-white">
                @{ if (Model.FinalStockList.Any() == false)
                    {
                                        <tr><th colspan=5>You do not have any Stocks</th></tr> }
                    else
                    {
                        int c = 1;
                                        @foreach (CompleteStockDetails x in Model.FinalStockList)
        {
                                <tr class="justify-content-center text-center" style="background-color:black">
                                    <th scope="row">@c</th>
                                    <td style=" width: 180px;">@x.StockName</td>
                                    <td style=" width: 180px; color:green">$@x.StockPrice</td>
                                    <td style=" width: 180px;">@x.StockCount</td>
                                    <td style=" width: 180px;"><a asp-action="SellStock" asp-route-name="@x.StockName" class="btn btn-outline-danger">Sell</a></td>
                                </tr>c = c + 1;
                } } }
            </tbody>
        </table>
    </div>
    </div>

